#include <stdio.h>
#include <stdlib.h>

struct node {
    int data;
    struct node *next;
};

struct node *head = NULL;

void create(int a[], int n) {
    if(n == 0) return;
    head = malloc(sizeof(struct node));
    head->data = a[0];
    head->next = head;
    struct node *p = head;
    for(int i = 1; i < n; i++) {
        struct node *t = malloc(sizeof(struct node));
        t->data = a[i];
        t->next = head;
        p->next = t;
        p = t;
    }
}

void display() {
    struct node *p = head;
    do {
        printf("%d ", p->data);
        p = p->next;
    } while(p != head);
    printf("%d", head->data);
}

int main() {
    int a[] = {20,100,40,80,60};
    create(a, 5);
    display();
}
